# Backend Environment Configuration Template
# [COPILOT-UPGRADE]: Copy this to .env and fill in your values

# Server Configuration
PORT=8000
NODE_ENV=development

# Database
MONGODB_URL=your_mongodb_connection_string_here

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173
CORS_ENABLED=true

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Gemini AI Configuration
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash:generateContent?key=YOUR_KEY_HERE
GEMINI_API_KEY=your_gemini_api_key_here

# Socket.io Configuration (optional)
SOCKET_PORT=8000

# Security
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Feature Flags
ENABLE_DEVICE_CONTROL=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_VOICE_COMMANDS=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/assistant.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
