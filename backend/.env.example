# ==================================================
# AI-POWERED VIRTUAL ASSISTANT - ENVIRONMENT VARIABLES
# ==================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!
# ==================================================

# Server Configuration
PORT=8000
SOCKET_PORT=8000
NODE_ENV=development

# Frontend URL for CORS (update for production)
FRONTEND_URL=http://localhost:5173
CORS_ENABLED=true

# ==================================================
# DATABASE CONFIGURATION
# ==================================================
# MongoDB Connection String
# Get from: https://cloud.mongodb.com
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# ==================================================
# SECURITY CONFIGURATION
# ==================================================
# JWT Secret - Use a strong random string (min 256 bits)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session Secret
SESSION_SECRET=your-session-secret-key-change-this

# Encryption Key for sensitive data
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# ==================================================
# CLOUDINARY CONFIGURATION
# ==================================================
# Image/File Storage - Get from: https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ==================================================
# AI CONFIGURATION
# ==================================================
# Google Gemini API - Get from: https://makersuite.google.com/app/apikey
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash:generateContent
GEMINI_API_KEY=your-gemini-api-key

# ==================================================
# EXTERNAL API KEYS (FREE TIER)
# ==================================================

# OpenWeatherMap API
# Free tier: 1000 calls/day
# Get from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your-openweather-api-key

# NewsData.io API
# Free tier: 200 requests/day
# Get from: https://newsdata.io
NEWSDATA_API_KEY=your-newsdata-api-key

# Google Custom Search API
# Free tier: 100 queries/day
# Get from: https://developers.google.com/custom-search
GOOGLE_SEARCH_API_KEY=your-google-search-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id

# ==================================================
# GOOGLE SERVICES (OAuth 2.0)
# ==================================================

# Google Calendar API
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CALENDAR_API_KEY=your-calendar-api-key
GOOGLE_CALENDAR_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=your-client-secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:8000/api/calendar/callback

# Gmail API
# Get from: https://console.cloud.google.com/apis/credentials
GMAIL_API_KEY=your-gmail-api-key
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:8000/api/gmail/callback

# Google Translate API
# Free tier: 500,000 chars/month
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_TRANSLATE_API_KEY=your-translate-api-key

# ==================================================
# MUSIC & VIDEO SERVICES
# ==================================================

# Spotify Web API
# Free tier: Unlimited (requires user authentication)
# Get from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/music/spotify/callback
SPOTIFY_REFRESH_TOKEN=

# YouTube Data API
# Free tier: 10,000 units/day
# Get from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your-youtube-api-key

# ==================================================
# SOCIAL MEDIA APIS
# ==================================================

# Facebook Graph API
# Get from: https://developers.facebook.com/apps
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_PAGE_ID=your-page-id

# Twitter (X) API v2
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_SECRET=your-access-secret
TWITTER_BEARER_TOKEN=your-bearer-token

# Instagram Basic Display API
# Get from: https://developers.facebook.com/apps
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_USER_ID=your-user-id

# ==================================================
# MESSAGING SERVICES
# ==================================================

# WhatsApp Business API
# Get from: https://business.facebook.com/wa/manage/home
WHATSAPP_BUSINESS_ACCOUNT_ID=your-account-id
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-token

# Telegram Bot API
# Get from: https://core.telegram.org/bots#botfather
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Twilio SMS API
# Get from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# ==================================================
# PAYMENT GATEWAY APIS (OPTIONAL)
# ==================================================

# PhonePe Payment Gateway
# Get from: https://www.phonepe.com/business-solutions/payment-gateway
PHONEPE_MERCHANT_ID=your-merchant-id
PHONEPE_SALT_KEY=your-salt-key
PHONEPE_SALT_INDEX=your-salt-index

# ==================================================
# FEATURE FLAGS
# ==================================================
ENABLE_DEVICE_CONTROL=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_VOICE_COMMANDS=true

# ==================================================
# LOGGING CONFIGURATION
# ==================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/assistant.log

# ==================================================
# RATE LIMITING
# ==================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================================================
# REDIS CONFIGURATION (FOR CACHING)
# ==================================================
# Set to false to disable Redis and use memory cache only (good for development)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==================================================
# NOTES:
# ==================================================
# 1. Generate strong JWT_SECRET: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# 2. Never commit .env file to git
# 3. Update FRONTEND_URL for production deployment
# 4. Rotate API keys regularly
# 5. Use environment-specific .env files (.env.production, .env.staging)
